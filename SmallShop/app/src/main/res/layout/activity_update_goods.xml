<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    style="@style/padding_style"
    android:overScrollMode="ifContentScrolls"
    tools:context="com.gxu.smallshop.GoodsInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#bbe1e1e1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_gravity="left"
                android:gravity="center"
                android:layout_weight="1">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/g_img"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    android:layout_width="fill_parent"
                    android:layout_height="70dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/g_img"
                    android:id="@+id/select_img"
                    style="@style/btn_style"
                    android:layout_centerHorizontal="true"
                    android:text="@string/select_img"
                    android:layout_height="40dp" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="110dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/g_num"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/g_num_value"
                        android:layout_width="wrap_content"
                        android:layout_weight="20"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/g_type"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/g_type_value"
                        android:layout_width="wrap_content"
                        android:layout_weight="20"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/count"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/count_value"
                        android:layout_width="wrap_content"
                        android:layout_weight="20"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/g_price"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/g_price_value"
                android:layout_width="wrap_content"
                android:layout_weight="20"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/g_name"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/g_name_value"
                android:layout_width="wrap_content"
                android:layout_weight="40"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:text="@string/introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/introduction_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:enabled="true"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:minLines="8"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:background="@android:drawable/edit_text" />

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/update_goods"
            style="@style/btn_style"
            android:layout_gravity="center"
            android:text="@string/update_goods"
            android:layout_height="wrap_content" />


    </LinearLayout>
</ScrollView>