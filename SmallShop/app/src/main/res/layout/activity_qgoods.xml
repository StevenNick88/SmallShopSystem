<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_free"
    tools:context="com.gxu.smallshop.QGoodsActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/btn_style"
        android:text="@string/main_book_query"
        android:id="@+id/main_book_query"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/borrowed_book_query"
        style="@style/btn_style"
        android:id="@+id/borrowed_book_query"
        android:layout_below="@+id/main_book_query"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>
