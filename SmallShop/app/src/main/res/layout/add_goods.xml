<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/padding_style"
    tools:context="com.gxu.smallshop.GoodsInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/g_num"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/g_num_value"
                    android:layout_width="wrap_content"
                    android:layout_weight="15"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@string/g_price"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/g_price_value"
                    android:layout_width="wrap_content"
                    android:layout_weight="15"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/g_type"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/g_type_value"
                    android:layout_width="wrap_content"
                    android:layout_weight="15"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@string/count"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/count_value"
                    android:layout_width="wrap_content"
                    android:layout_weight="15"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/g_name"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/g_name_value"
                    android:layout_width="wrap_content"
                    android:layout_weight="20"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="@string/g_img"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/g_img"
                    style="@style/btn_style"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/g_img_value"
                    android:layout_width="wrap_content"
                    android:layout_weight="40"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:text="@string/introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/introduction_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:enabled="true"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:minLines="8"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:background="@android:drawable/edit_text" />

            <Button
                android:layout_width="wrap_content"
                android:id="@+id/add_goods"
                android:layout_gravity="center"
                android:text="@string/add_goods"
                style="@style/btn_style"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>
