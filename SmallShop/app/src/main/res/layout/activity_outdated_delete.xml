<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/padding_style"
    tools:context="com.gxu.smallshop.OutdatedDeleteActivity">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <Button
            android:text="@string/select_date"
            android:id="@+id/select_date"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/date_value"
            android:layout_width="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/del_message"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_weight="5"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="wrap_content">

        <Button
            android:text="@string/del_ensure"
            android:id="@+id/del_ensure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/del_cancel"
            android:text="@string/del_cancel"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
