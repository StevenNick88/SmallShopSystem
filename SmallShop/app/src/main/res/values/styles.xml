<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="CustomActionBarStyle" parent="@style/AppTheme">
        <!--<item name="android:background">#D01839</item>-->
        <item name="android:titleTextStyle">@style/AcBar_titleStyle</item>
        <item name="colorPrimary">#19191a</item>
    </style>

    <style name="AcBar_titleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#D01839</item>
    </style>


    <style name="StyledIndicators" parent="@style/CustomActionBarStyle">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="CustomTabPageIndicator">
        <item name="android:background">@drawable/custom_tab_indicator</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <!--动态更改title的颜色-->
        <item name="android:textColor">@drawable/viewpager_title_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:divider">@drawable/custom_tab_indicator_divider</item>
        <item name="android:showDividers">middle</item>
        <!--<item name="android:paddingLeft">3dp</item>-->
        <!--<item name="android:paddingRight">3dp</item>-->
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <!--         <item name="android:background">@drawable/vpi__tab_indicator</item> -->
        <!--<item name="android:paddingLeft">22dip</item>-->
        <!--<item name="android:paddingRight">22dip</item>-->
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <!--<item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>-->
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="btn_style">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">-5dp</item>
        <item name="android:paddingTop">-5dp</item>
        <item name="android:background">@drawable/white_button_selector</item>
    </style>

    <style name="padding_style">
        <item name="android:padding">5dp</item>
    </style>
</resources>
